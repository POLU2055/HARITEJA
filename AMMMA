âœ… Here is your corrected full code:
java
Copy
Edit
import java.util.*;

// Encapsulated class
class Main {
    private String name;  // private field
    private int age;

    // Setter for name
    public void setName(String n) {
        name = n;
    }

    // Getter for name
    public String getName() {
        return name;
    }

    // Setter for age (with validation)
    public void setAge(int a) {
        if (a > 0) {
            age = a;
        } else {
            System.out.println("Invalid age");
        }
    }

    // Getter for age
    public int getAge() {
        return age;
    }
}

// Driver class
public class Student {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        Main p = new Main(); // object of Main class
        
        String b = s.nextLine(); // Input name
        int a = s.nextInt();     // Input age
        
        p.setName(b);            // correct setter
        p.setAge(a);             // correct setter
        
        System.out.println(p.getName());  // correct getter
        System.out.println(p.getAge());   // correct getter

        s.close();
    }
}
