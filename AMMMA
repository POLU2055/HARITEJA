import java.util.*;
class Mathop{
    int add(int a,int b){
        return a+b;
    }
    float add(float a,float b,float c){
        return a+b+c;
    }
    double  add(double a,double b){
        return a+b;
    }
}
public class Main{
    public static void main(String[] args){
        Scanner s=new Scanner(System.in);
        Mathop op=new Mathop();
        int a=s.nextInt();
        int b=s.nextInt();
        float c=s.nextFloat();
        float d=s.nextFloat();
        float e=s.nextFloat();
        double f=s.nextDouble();
