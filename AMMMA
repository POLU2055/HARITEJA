int sum(int n) {
    int i, g = 0;
    for (i = 1; i <= n; i++) {
        g += i;
    }
    return g;
}

int main() {
    int n, a;
    printf("Enter a number: ");
    scanf("%d", &n);  // Read input value for n
    a = sum(n);
    printf("Sum = %d\n", a);
    return 0;
}
